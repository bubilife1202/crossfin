{
  "name": "@crossfin/api",
  "private": true,
  "version": "1.16.0",
  "type": "module",
  "scripts": {
    "dev": "wrangler dev --port 8787",
    "build": "tsc -p tsconfig.json --noEmit",
    "deploy": "wrangler deploy",
    "db:migrate:local": "wrangler d1 migrations apply crossfin-db --local",
    "db:migrate:remote": "wrangler d1 migrations apply crossfin-db --remote",
    "x402:paid": "node scripts/x402-paid-fetch.mjs",
    "x402:wallet": "node scripts/x402-gen-wallet.mjs",
    "x402:balance": "node scripts/x402-usdc-balance.mjs",
    "x402:funds": "node scripts/x402-funds-check.mjs",
    "x402:make20": "node scripts/x402-make-20.mjs",
    "catalog:sync": "node scripts/catalog-guard.mjs --sync",
    "catalog:verify": "node scripts/catalog-guard.mjs",
    "contract:verify": "node scripts/contract-guard.mjs",
    "verify:release": "node ../../scripts/verify-release.mjs"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.26.0",
    "@x402/core": "^2.3.1",
    "@x402/evm": "^2.3.1",
    "@x402/extensions": "^2.3.1",
    "@x402/fetch": "^2.3.0",
    "@x402/hono": "^2.3.0",
    "hono": "^4.7.0",
    "viem": "^2.45.3"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20250214.0",
    "typescript": "^5.9.3",
    "wrangler": "^4.0.0"
  }
}
